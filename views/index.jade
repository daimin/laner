extends head

block content-detail
  div.container
    div.row.show-grid
      div.span8
        div.row.panel
          h2 公告区
          h3 公告还有广告就加在这里
        div.row.panel
          div.row
          - if (diarys.length)
          - diarys.forEach(function(diary){
            div.post
              h3.entry-title
                a(rel="bookmark",title='链向 #{diary.title} 的链接',href='/diary/#{diary._id}/view')  #{diary.title}
              div.entry-meta
                span.author.vcard
                  a.url.fn.n(title="查看所有由 admin 发布的文章",href="http://localhost/wordpress/?author=1")  #{diary.author} 于
                a(href="bookmark",title="下午 1:11",href="http://localhost/wordpress/?p=4")
                  span.entry-date #{diary.create_date} 
                  说到
                div.entry-content
                - if(diary.up_img){
                  div.thumbs_block100
                    a(href='#{diary.up_img_thumb}')
                      img.entry-img(src='#{diary.up_img_thumb}')
                - } 
                !{diary.summary}
              div.entry-utility.pull-right
                span.comments-link
                  a(title='《#{diary.title}》上的评论",href="http://localhost/wordpress/?p=4#respond") 0回应
                span.meta-sep |
                span.edit-link
                  a.post-edit-link(title="编辑文章",href="http://localhost/wordpress/wp-admin/post.php?post=4&amp;action=edit") 编辑
                span.meta-sep |
                span.edit-link
                  a.post-edit-link(title="阅读全文",href="http://localhost/wordpress/wp-admin/post.php?post=4&amp;action=edit") 阅读全文
          div.ul
          - })
            div.pagination
              ul
                li
                  a(href="#") Prev
                li.active
                  a(href="#") 1
                li
                  a(href="#") 2
                li
                  a(href="#") 3
                li
                  a(href="#") 4
                li
                  a(href="#") Next
      div.span4
        form.panel.form-vertical
          header 登录
          input.input-large(type="text",placeholder="Email")
          input.input-large(type="password",placeholder="Password")
          label.checkbox Remember me
            input(type="checkbox") 
          button.btn(type="sumbit") 登录
          a(href="#") &nbsp;注册
        div
          div.panel 
            header 热门日记
            ul.unstyled
              li 
                a(href="#") Node.js简单介绍并实现一个简单的Web MVC框架
              li
                a(href="#") websocket与node.js的完美结合                
        div.panel
          header 活跃用户 
        div.panel
          header 相关站点
