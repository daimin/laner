<form class="form-horizontal" method="POST" action="" onsubmit="return doupdate_notice('/admin/update_notice')">
    <fieldset>
		<div class="control-group">
	       <label class="control-label" for="email">公告标题</label>
	       <div class="controls">
	       <input class="input input-xlarge" type="text" id="no_title" name="no_title" placeholder="公告标题" value="<%= notice.h1%>">
	       </div>
		</div>
		<div class="control-group">
		   <label class="control-label" for="email">公告内容</label>
		   <div class="controls">
            <textarea class="input-xlarge" id="no_cont" name="no_cont" placeholder="公告" style="width:60%;height:250px;"><%= notice.h2%></textarea>
           </div>
        </div>
       <div class="form-actions">
            <button class="btn btn-primary" type="submit">更新</button>&nbsp;&nbsp;
        </div>
    </fieldset>
</form>